   loop(8,
   gfx_line(Band1_Comp_Handle_x+15*zoom, Band1_Comp_Handle_y + 25*zoom + tmploop, Band1_Comp_Handle_x+18*zoom, Band1_Comp_Handle_y + 25*zoom + tmploop);
   tmploop += 17.857;
   );




cuts > 0 ? (


