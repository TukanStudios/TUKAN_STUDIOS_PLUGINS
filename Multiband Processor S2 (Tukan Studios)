       llx9 /= 4;
       slider4 = min(max(0, freq_to_per(llx9,100)), 100);
       cuts > 3 ? (readout_f(max(slider3+1,min(slider4, slider5-1)), 3)):(readout_f(max(slider3+1,slider4),3));
       caller = 1;
